<span style="font-family: verdana, geneva, sans-serif;"><!DOCTYPE html>
    <html lang="en">
        <head>
        <meta charset="UTF-8" />
        <title>Admin Dashboard | By Code Info</title>
        <link rel="stylesheet" href="~/css/style3.css" />
        <script language="javascript" src="ALL.js"></script>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

        <!-- Latest compiled JavaScript -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
        </head>
        <body>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-2">
                        <div class="slide-bar">
                            <div class="slide-bar-start">
                            <a href="~/Admin/Movie">Movies</a>
                            <a href="~/Admin/Ep">Episodes</a>
                            <a href="~/Admin/user">Users</a>
                            </div>
                            <div class="slide-bar-end">
                            <a href="/Home/Main">Trang chủ</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <div class="title">
                            <H1>User</H1>
                        </div>
                        <div class="content">
                            <div class="search">
                                <form action="#">
                                @using (Html.BeginForm("user", "Admin", FormMethod.Get))
                                {
                                    <div class="list-search">
                                        <span>Chọn bộ phim:</span>
                                        <input type="text" placeholder="User name" class="form-control" name="searchacc">
                                    </div>
                                    <button type="submit" id="btn-movie-filter" class="btn btn-dark btn-filter-movie"><span>Áp dụng</span></button>
                                }
                                </form>
                            </div>
                        </div>
                        <hr>
                        <button class="btn btn-success"><i class="fa-solid fa-plus"></i></button>
                        <div class="content">
                            <p style="color:red;">@ViewBag.ErrorMessage</p> 
                            <table border="1" style="width: 100%;">
                                <tr>
                                    <th>User Name</th>
                                    <th>Password</th>
                                    <th>Email</th>
                                    <th>First name</th>
                                    <th>Last name</th>
                                    <th>Birthday</th>
                                    <th>Gender</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                                @using (Html.BeginForm("user", "Admin", FormMethod.Post))
                                {
                                <tr>
                                    <td><input type="text" class="form-control-sm" name="Username"></td>
                                    <td><input type="text" class="form-control-sm" name="Password"></td>
                                    <td><input type="text" class="form-control-sm" name="Email"></td>
                                    <td><input type="text" class="form-control-sm" name="FirstName"></td>
                                    <td><input type="text" class="form-control-sm" name="LastName"></td>
                                    <td><input type="text" class="form-control-sm" name="DateOfBirth"></td>
                                    <td>
                                        <Select class="form-select" name="Gender">
                                            <option value="Nam">Nam</option>
                                            <option value="Nữ">Nữ</option>
                                    </Select></td>
                                    <td><input type="text" class="form-control-sm" name="Status" value="user"></td>
                                    <td><button class="btn btn-success">Add</button></td>
                                </tr>
                                }
                            </table>
                        </div>
                        <hr>
                        <div class="content">
                            <table border="1" style="width: 100%;">
                                <tr>
                                    <th>User Name</th>
                                    <th>Password</th>
                                    <th>Avartar</th>
                                    <th>Email</th>
                                    <th>First name</th>
                                    <th>Last name</th>
                                    <th>Birthday</th>
                                    <th>Gender</th>
                                    <th>Status</th>
                                    <th></th>
                                </tr>
                            @foreach (var a in ViewBag.ListAcc)
                            {
                                @if (a != null)
                                {
                                    <tr>
                                        <td>@a.Username</td>
                                        <td>@a.Password</td>
                                        <td>@a.Avatar</td>
                                        <td>@a.Email</td>
                                        <td>@a.FirstName</td>
                                        <td>@a.LastName</td>
                                        <td>@a.DateOfBirth</td>
                                        <td>@a.Gender</td>
                                        <td>@a.Status</td>
                                        <td>
                                            <a href="@Url.Action("userEdit", "Admin", new { id = a.UserId })">
                                                <button class="btn btn-primary"><i class="fa-solid fa-pen-nib"></i></button>
                                            </a>
                                            @using (Html.BeginForm("DeleteU", "Admin", new { id = a.UserId }, FormMethod.Post))
                                            {
                                                <button type="submit" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></button>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </body>
    </html>
</span>